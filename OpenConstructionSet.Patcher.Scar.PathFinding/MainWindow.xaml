<Window x:Class="OpenConstructionSet.Patcher.Scar.PathFinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenConstructionSet.Patcher.Scar.PathFinding"
        xmlns:v="clr-namespace:OpenConstructionSet.Patcher.Scar.PathFinding.View"
        xmlns:vm="clr-namespace:OpenConstructionSet.Patcher.Scar.PathFinding.ViewModel"
        mc:Ignorable="d"
        d:DataContext="{Binding MainViewModel, Source={StaticResource DesignServiceLocator}}"
        DataContext="{Binding MainViewModel, Source={StaticResource ServiceLocator}}"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ContentControl Content="{Binding InstallationSelection}" Margin="12" />
        <ContentControl Content="{Binding LoadOrder}" Grid.Row="1" />
        <Button Command="{Binding CreateMod}" Margin="12" Width="120" Height="32" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Row="1" Content="Create" />
    </Grid>
</Window>
