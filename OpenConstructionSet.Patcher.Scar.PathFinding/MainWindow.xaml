<Window x:Class="OpenConstructionSet.Patcher.Scar.PathFinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenConstructionSet.Patcher.Scar.PathFinding"
        xmlns:vm="clr-namespace:OpenConstructionSet.Patcher.Scar.PathFinding.ViewModel"
        xmlns:v="clr-namespace:OpenConstructionSet.Patcher.Scar.PathFinding.View"
        xmlns:i="clr-namespace:OpenConstructionSet.Patcher.Scar.PathFinding.Infrastructure"
        mc:Ignorable="d"
        Title="OCS Content Patcher - SCAR's Pathfinding Fix" MinHeight="300" MinWidth="680" WindowState="Maximized"
        FontSize="16"
        d:DataContext="{d:DesignInstance vm:MainViewModel, IsDesignTimeCreatable=False}">
    <Window.Resources>
        <i:InverseBoolValueConverter x:Key="InverseBoolValueConverter" />
    </Window.Resources>
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style TargetType="TextBox">
                <Setter Property="Margin" Value="0,6,6,0" />
            </Style>
            <Style TargetType="ListBox">
                <Setter Property="Margin" Value="0,6,6,0" />
            </Style>
            <Style TargetType="Button">
                <Setter Property="Padding" Value="6" />
                <Setter Property="Margin" Value="6" />
                <Setter Property="Width" Value="100" />
            </Style>
            <Style TargetType="TextBlock">
                <Setter Property="Margin" Value="6" />
                <Setter Property="TextAlignment" Value="Right" />
            </Style>
        </Grid.Resources>

        <StackPanel>
            <TextBlock VerticalAlignment="Center">Output mod name:</TextBlock>
        </StackPanel>

        <TextBox Grid.Column="1" VerticalAlignment="Center" Text="{Binding NewMod, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Grid.Row="1">Mod Folders:</TextBlock>

        <Expander Margin="0,12,0,0" Grid.Row="1" Grid.Column="1" Header="Configure Mod Folders (Advanced Users)">
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <ListBox ItemsSource="{Binding Folders}" SelectedItem="{Binding CurrentFolder}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Margin="0" Text="{Binding FolderPath}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <StackPanel Orientation="Horizontal" Grid.Row="1" >
                    <Button Grid.Row="1" Margin="0,12,0,12" Command="{Binding AddFolder}">Add</Button>
                    <Button Grid.Row="1" Margin="12,12,0,12" Command="{Binding RemoveFolder}">Remove</Button>
                </StackPanel>
            </Grid>
        </Expander>

        <StackPanel Grid.Row="2">
            <TextBlock >Mods to patch:</TextBlock>
        </StackPanel>

        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <DockPanel>
                <Button HorizontalAlignment="Right" Command="{Binding RefreshMods}">Refresh</Button>
                <TextBlock Padding="6" Margin="0,12" >Select</TextBlock>
                <Button Command="{Binding SelectAll}">All</Button>
                <TextBlock Padding="6" Margin="0,12">|</TextBlock>
                <Button Command="{Binding SelectNone}">None</Button>

                <Button Width="auto" HorizontalAlignment="Right" Command="{Binding SelectNone}">Save Load Order</Button>
            </DockPanel>

            <v:DragItemsControl Margin="0,0,12,0" Grid.Row="1" ItemsSource="{Binding Mods}" IsEnabled="{Binding Busy, Converter={StaticResource InverseBoolValueConverter}}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox VerticalAlignment="Center" Margin="0,0,6,0" IsChecked="{Binding Selected}" />
                            <TextBlock Text="{Binding Name}" />
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </v:DragItemsControl>
        </Grid>

        <Button HorizontalAlignment="Right" Grid.Row="3" Command="{Binding CreateMod}" Grid.Column="2">Create Mod</Button>
    </Grid>
</Window>
